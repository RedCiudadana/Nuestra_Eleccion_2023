---
pagination:
  data: collections.blogs
  size: 5
  alias: list
  reverse: true
permalink: "blogs/{% if pagination.pageNumber > 0 %}page-{{ pagination.pageNumber + 1 }}/{% endif %}index.html"
---

{% extends "base.njk" %}

{% block head %}
    <title>Blogs | Red Ciudadana</title>
{% endblock %}

{% block content %}

        <!-- Content
		============================================= -->
		<section id="content">
			<div class="content-wrap">

                <!-- event-area-start -->
                <div class="event-area pt-60 pb-130">
                    <div class="container">

                        <div class="container clearfix">
                            <div class="heading-block center">

                                <img style="margin:2% 0"  src="/elementos/ELEMENTOS/ICONOS/01.png" alt="Canvas Logo">

                                <h2>Blogs</h2>
                                
                            </div>
                        </div>

                        {% if list%}
                        {% for item in list%}
                        <div class="event-bg event-bg-03 pos-rel mb-30" style="margin:1rem 0">
                            <div class="row">
                                <div class="col-xl-6 col-lg-6">
                                    <div class="event-img mb-20 center">
                                        <a href="events-details.html"><img style="height:100%!important" src="{{item.data.image}}" alt=""></a>
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6">
                                    <div class="event-wrapper mb-20 ">
                                        <div class="event-text">
                                            <!--span><i class="far fa-map-marked-alt verdeo"></i> Guatemala - 8 de Septiembre 2021</span-->
                                            <h3> {{item.data.title}}</h3>
                                        </div>
                                        <div class="event-meta">
                                            <span><!--i class="far fa-user-circle"--></i>{{item.data.description}}</span>
                                        </div><br>
                                        <div class="cta-content">

                                            <div class="cta-button">
                                                <a class="btn" href="{{item.url}}">Ver Blog <i class="far fa-long-arrow-right"></i></a>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                        {% endif %}

                    </div>


                    <div class="col-span-9 text-sm flex justify-end">
                    {% if pagination.href.previous %}
                    <div>
                        {% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">←  Nuevos blog</a>{% else %}←  Nuevos blog{% endif %}
                    </div>
                    {% endif %}
                    {% if pagination.href.next %}
                        <div class="text-right mt-2">
                        {% if pagination.href.next %}<a href="{{ pagination.href.next }}">Blog anteriores →</a>{% else %}Blog anteriores →{% endif %}
                        </div>
                    {% endif %}
                    </div>

                </div>
            </div>
        </div>

{% endblock %}