---
pagination:
  data: distrital
  size: 1
  alias: distrital
  addAllPagesToCollections: true
permalink: "distrital/{{distrital.id}}/{{candidatura.nombre | slug}}/index.html"
tags:
  - distrital
---

{% extends "src/base.njk" %}

{% block head %}
<title>{{distrital.nombre}} | Candidatos 2023</title>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
{% endblock %}

{% block content %}

    <div class="section m-0" style="background-color:#f0f2fd">
		<div class="container">

            <div class="row my-4 m-o-responsive" style="background-color:#fff">
                <div class="col-lg-12 d-flex breadcumb" style="padding:20px">
                    <a href="/index.html">Inicio</a> &nbsp/&nbsp <a href="/distrital/0/index.html">Distrital</a> &nbsp/&nbsp <a href="#" style="pointer-events:none">{{distrital.nombre}}</a> 
                </div>
            </div>

            <div class="row my-4 m-o-responsive" style="background-color:#fff">
                <div class="col-lg-3 d-flex my-4">
                    <img src="{{distrital.fotoUrl}}">
                </div>
                <div class="col-lg-6 my-4">
                    <h3>{{distrital.nombre}}</h3>
                    <h5>Tip de Elección: {{distrital.tipoeleccion}}</h5>
                    <h5>Partido Político: {{distrital.partidopostulante}}</h5>
                    <h5>Estado: {{distrital.estado}}</h5>
                    <h5>Distrito: {{distrital.distrito}}</h5>
                    <h5>Casilla: {{distrital.casilla}}</h5>
                </div>
                <div class="col-lg-3 my-4 center-elements">
                    <a href="https://partidos-publicos.netlify.app/partidospublicos/{{distrital.partidopostulante}}/"><img src="{{distrital.fotoUrlPartido}}"></a>
                    <div class"d-flex" style"margin-tp:10px!important">
                        {% if distrital.fb %}
                        <a href="{{distrital.fb}}" target="_blank" style="font-size:30px!important"><i class="fa-brands fa-square-facebook"></i></a>
                        {% endif %}
                        {% if distrital.tw %}
                        <a href="{{distrital.tw}}" target="_blank" style="font-size:30px!important"><i class="fa-brands fa-square-twitter"></i></a>
                        {% endif %}
                    </div>
                </div>
            </div>

            {% if distrital.experiencia_academica %}

            <div class="row my-4 m-o-responsive" style="background-color:#fff">
                <div class="col-lg-12" style="background-color: #E86762">
                    <h4 class="mb-0 py-4 text-white">Experiencia Académica</h4>
                </div>

                <div class="col-lg-12" style="background-color: #fff">
                    <p class="mb-0 py-4">{{distrital.experiencia_academica}}</p>
                </div>
            </div>

            {% endif %}

            {% if distrital.historial_politico %}

            <div class="row my-4 m-o-responsive" style="background-color:#fff">
                <div class="col-lg-12" style="background-color: #E86762">
                    <h4 class="mb-0 py-4 text-white">Historial Político</h4>
                </div>

                <div class="col-lg-12" style="background-color: #fff">
                    <p class="mb-0 py-4">{{distrital.historial_politico}}</p>
                </div>
            </div>

            {% endif %}

            {% if distrital.planes_gobierno %}

            <div class="row my-4 m-o-responsive" style="background-color:#fff">
                <div class="col-lg-12 d-flex justify-content-between" style="background-color: #E86762">
                    <h4 class="mb-0 py-4 text-white">Planes de Gobierno</h4>
                    <a href="{{distrital.planes_gobierno}}" class="btn" style="align-self:center">Descarga Aquí</a>
                </div>
            </div>

            {% endif %}

            {% if distrital.fuentes_info %}

            <div class="row my-4 m-o-responsive" style="background-color:#fff">
                <div class="col-lg-12" style="background-color: #E86762">
                    <h4 class="mb-0 py-4 text-white">Fuentes de Información</h4>
                </div>

                <div class="col-lg-12" style="background-color: #fff">
                    <p class="mb-0 py-4">{{distrital.fuentes_info}}</p>
                </div>
            </div>

            {% endif %}

        </div>
    </div>

{% endblock %}

{% block body_javascripts %}

{% endblock %}